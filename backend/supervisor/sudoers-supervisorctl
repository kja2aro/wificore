# Allow www-data to run supervisorctl without password
# This is needed for queue workers to check supervisor status
www-data ALL=(ALL) NOPASSWD: /usr/bin/supervisorctl -c /etc/supervisor/supervisord.conf status
www-data ALL=(ALL) NOPASSWD: /usr/bin/supervisorctl -c /etc/supervisor/supervisord.conf status *
www-data ALL=(ALL) NOPASSWD: /usr/bin/supervisorctl -c /etc/supervisor/supervisord.conf signal *
